{
    "version": "0.1",
    "manifest_version": 2,
    "name": "Crunchyroll Unblocker",
    "description": "Watch region blocked anime on Crunchyroll from outside the US!",

    "background": {
        "scripts": ["background.js"]
	},

    "browser_action": {
        "default_icon": {
            "128": "crunblock128.png"
        }
    },

    "background": {
		"scripts": ["background.js"]
	},

    "browser_action": {
		"default_icon": "crunblock128.png"
	},


    "content_scripts": [{
        "js": [ "content.js" ],
        "matches": ["<all_urls>"],
        "run_at": "document_end"
    }],

    "permissions": [
        "background",
        "cookies",
        "notifications",
        "storage",
        "tabs",
        "<all_urls>"
    ],
    "icons": { 
        "16": "crunblock16.png",
        "48": "crunblock48.png",
        "128": "crunblock128.png" 
    }
}